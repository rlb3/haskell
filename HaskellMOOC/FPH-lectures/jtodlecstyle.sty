% Defining title, author, and date
\newcommand{\TitleColor}{blue}

\newcommand{\SetPresentationTitle}[2]
  {\newcommand{\PresentationShortTitle}{#1}
   \newcommand{\PresentationFullTitle}{#2}}

\newcommand{\SetPresentationDate}[2]
  {\newcommand{\PresentationShortDate}{#1}
   \newcommand{\PresentationLongDate}{#2}}

\newcommand{\SetPresentationNumber}[1]
  {\newcommand{\PresentationNumber}{#1}}

\newcommand{\PresentationTitleSlide}{
  \begin{center}
    {\large\PresentationTitle}\\
    \vspace{2em}
    {\LARGE\color{\TitleColor}\PresentationFullTitle\\\strut}\\
%  The \strut allows the title to end with \\, so all the lines
%  have proper interline spacing
    \vspace{0.9em}
    {\large \PresentationType\ \PresentationNumber}\\
    \vspace{0.2em}
    {\normalsize\PresentationLongDate}\\
    \vspace{2em}
    {\AuthorName}\\
    {\Institution}\\
    \vspace{0.8em}
    {\footnotesize\CopyRight}
  \end{center}
}

